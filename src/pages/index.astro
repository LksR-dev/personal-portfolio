---
import Layout from '../layouts/Layout.astro';
import LinkedInIcon from '../icons/LinkedIn.astro';
import GitHubIcon from '../icons/GitHub.astro';
import MailIcon from '../icons/Mail.astro';
import BriefcaseIcon from '../icons/Briefcase.astro';
import CodeIcon from '../icons/Code.astro';
import PersonIcon from '../icons/Person.astro';
import SocialPill from '../components/SocialPill.astro';
import Experience from '../components/Experience.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Projects from '../components/Projects.astro';
import Contact from '../components/Contact.astro';
---

<Layout
	title='Lucas Portfolio - Web Developer - Backend Developer'
	description='Hires Lucas to build modern, scalable applications'
>
	<main class='px-4'>
		<SectionContainer class='py-44 pb-22'>
			<img src='../../public/me-cut.jpeg' alt='Lucas' class='rounded-full size-12 mb-4' />

			<h1
				class='text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10'
			>
				Hey, I'm Lucas
			</h1>
			<h2 class='text-xl lg:text-2xl opacity-80 text-wrap mas-w-[700px]'>
				I'm Fullstack Developer (Backend focused), specialised in creating unique applications.
			</h2>

			<nav class='flex gap-4 mt-8 flex-wrap'>
				<SocialPill href='/google'>
					<LinkedInIcon class='size-4 md:size-6' />
					LinkedIn
				</SocialPill>

				<SocialPill href='/google'>
					<GitHubIcon class='size-4 md:size-6' />
					GitHub
				</SocialPill>

				<SocialPill href='/google'>
					<MailIcon class='size-4 md:size-6' />
					lucasmruiz05@gmail.com
				</SocialPill>
			</nav>
		</SectionContainer>

		<SectionContainer id='about' class='mb-44'>
			<h2 class='text-2xl font-semibold flex items-start gap-x-3 w-full mb-5'>
				<PersonIcon class='size-7 md:size-6' />
				About me
			</h2>
			<p class='text-lg text-pretty'>
				I'm a web developer fueled by a passion for crafting groundbreaking software solutions. My
				insatiable curiosity and unwavering drive keep me at the forefront of the latest
				technologies and best practices. I thrive on tackling complex challenges and embracing new
				opportunities, all while pushing myself to new heights in both my professional and personal
				life.
			</p>
		</SectionContainer>

		<SectionContainer id='experience'>
			<h2 class='text-2xl font-semibold mb-6 flex gap-x-3 items-center'>
				<BriefcaseIcon class='size-7' />
				Work experience
			</h2>
			<Experience />
		</SectionContainer>

		<SectionContainer id='projects' class='mt-44 flex flex-col items-center'>
			<h2 class='text-2xl font-semibold flex items-start gap-x-3 w-full mb-12'>
				<CodeIcon class='size-7 md:size-6' />
				Projects
			</h2>
			<Projects />
		</SectionContainer>

		<SectionContainer id='contact' class='mt-44'>
			<h2 class='text-2xl font-semibold flex items-start gap-x-3 w-full mb-12'>
				<MailIcon class='size-7 md:size-6' />
				Contact
			</h2>
			<Contact />
		</SectionContainer>
	</main>
</Layout>
