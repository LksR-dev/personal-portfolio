<form action='https://formspree.io/f/xzbnrdon' method='POST' class='max-w-sm mx-auto'>
	<div class='mb-5'>
		<label for='email' class='block mb-2 text-lg font-medium text-gray-200 dark:text-white'
			>Your email</label
		>
		<input
			type='email'
			id='email'
			class='bg-gray-50 border text-gray-900 text-sm rounded-lg block w-full p-2.5'
			placeholder='joe@example.com'
			required
		/>
	</div>

	<div class='mb-5'>
		<label for='name' class='block mb-2 text-lg font-medium text-gray-200 dark:text-white'
			>Your name:</label
		>
		<input
			type='text'
			id='name'
			name='name'
			class='bg-gray-50 border text-gray-900 text-sm rounded-lg block w-full p-2.5'
			placeholder='Joe'
			required
		/>
	</div>

	<label for='message' class='block mb-2 text-lg font-medium text-white'>Your message:</label>
	<textarea
		id='message'
		rows='4'
		name='message'
		required
		class='block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300'
		placeholder='Leave a comment...'></textarea>

	<button
		type='submit'
		class='text-[#01EEFF] hover:text-white border border-[#01EEFF] hover:bg-[#01eeffb4] font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2 mt-8 w-full'
		>Send</button
	>
</form>
